<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:clipToPadding="false">

    <GridView
        android:id="@+id/albumGrid"
        style="@style/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_elevated_dark"
        android:clipToPadding="false"
        android:columnWidth="@dimen/grid_width"
        android:elevation="@dimen/window_elevation"
        android:gravity="center"
        android:horizontalSpacing="@dimen/grid_padding"
        android:numColumns="auto_fit"
        android:padding="@dimen/grid_padding"
        android:saveEnabled="true"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/grid_padding"/>

</FrameLayout>