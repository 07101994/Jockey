<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Theme Colors -->
    <color name="primary">#00838F</color>
    <color name="primary_dark">#006064</color>
    <color name="accent">#40C4FF</color>
    <color name="ui_text">#E0F7FA</color>
    <color name="ui_detail_text">#80DEEA</color>

    <!-- Base Colors -->
    <color name="list_text">#E0E0E0</color>
    <color name="detail_text">#9E9E9E</color>
    <color name="background">#212121</color>
    <color name="background_elevated">#333333</color>
    <color name="background_miniplayer">#424242</color>

    <!-- Static Colors -->
    <color name="transparent_ui_text">#FAFAFA</color>
    <color name="transparent_ui_off">#75FAFAFA</color>
    <color name="grid_background_default">#ffb0bec5</color>
    <color name="grid_text">#77000000</color>
    <color name="grid_detail_text">#97000000</color>

    <color name="player_control_background">#212121</color>
    <color name="player_text_main">#FAFAFA</color>
    <color name="player_text_detail">#88FFFFFF</color>
    <color name="player_control_tint">#FAFAFA</color>

    <!-- Custom Theme Colors-->
    <!-- Light Base -->
    <color name="list_text_light">#212121</color>
    <color name="detail_text_light">#757575</color>
    <color name="background_light">#EEEEEE</color>
    <color name="background_elevated_light">#F5F5F5</color>
    <color name="background_miniplayer_light">#FAFAFA</color>

    <!-- Grey -->
    <color name="primary_grey">#37474F</color>
    <color name="primary_dark_grey">#263238</color>
    <color name="accent_grey">#90A4AE</color>
    <color name="ui_text_grey">#FAFAFA</color>
    <color name="ui_detail_text_grey">#BDBDBD</color>

    <!-- Red -->
    <color name="primary_red">#C62828</color>
    <color name="primary_dark_red">#B71C1C</color>
    <color name="accent_red">#FF5252</color>
    <color name="ui_text_red">#FFEBEE</color>
    <color name="ui_detail_text_red">#EF9A9A</color>

    <!-- Orange -->
    <color name="primary_orange">#EF6C00</color>
    <color name="primary_dark_orange">#E65100</color>
    <color name="accent_orange">#FFAB40</color>
    <color name="ui_text_orange">#FFF3E0</color>
    <color name="ui_detail_text_orange">#FFCC80</color>

    <!-- Yellow -->
    <color name="primary_yellow">#F9A825</color>
    <color name="primary_dark_yellow">#F57F17</color>
    <color name="accent_yellow">#FFD600</color>
    <color name="ui_text_yellow">#FFFDE7</color>
    <color name="ui_detail_text_yellow">#FFF59D</color>

    <!-- Green -->
    <color name="primary_green">#2E7D32</color>
    <color name="primary_dark_green">#1B5E20</color>
    <color name="accent_green">#69F0AE</color>
    <color name="ui_text_green">#E8F5E9</color>
    <color name="ui_detail_text_green">#A5D6A7</color>

    <!-- Purple -->
    <color name="primary_purple">#4527A0</color>
    <color name="primary_dark_purple">#311B92</color>
    <color name="accent_purple">#7C4DFF</color>
    <color name="ui_text_purple">#EDE7F6</color>
    <color name="ui_detail_text_purple">#B39DDB</color>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- More themes -->
    <style name="AppTheme.Black" parent="AppTheme">
        <item name="colorPrimary">@color/primary_grey</item>
        <item name="colorPrimaryDark">@color/primary_dark_grey</item>
        <item name="colorAccent">@color/accent_grey</item>
        <item name="colorControlHighlight">@color/accent_grey</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="colorControlHighlight">@color/accent_red</item>
    </style>

    <style name="AppTheme.Orange" parent="AppTheme">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryDark">@color/primary_dark_orange</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="colorControlHighlight">@color/accent_orange</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryDark">@color/primary_dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
        <item name="colorControlHighlight">@color/accent_yellow</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="colorControlHighlight">@color/accent_green</item>
    </style>

    <style name="AppTheme.Purple" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorAccent">@color/accent_purple</item>
        <item name="colorControlHighlight">@color/accent_purple</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="windowActionBar">false</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- More themes -->
    <style name="AppThemeLight.Black" parent="AppThemeLight">
        <item name="colorPrimary">@color/primary_grey</item>
        <item name="colorPrimaryDark">@color/primary_dark_grey</item>
        <item name="colorAccent">@color/accent_grey</item>
        <item name="colorControlHighlight">@color/accent_grey</item>
    </style>

    <style name="AppThemeLight.Red" parent="AppThemeLight">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="colorControlHighlight">@color/accent_red</item>
    </style>

    <style name="AppThemeLight.Orange" parent="AppThemeLight">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryDark">@color/primary_dark_orange</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="colorControlHighlight">@color/accent_orange</item>
    </style>

    <style name="AppThemeLight.Yellow" parent="AppThemeLight">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryDark">@color/primary_dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
        <item name="colorControlHighlight">@color/accent_yellow</item>
    </style>

    <style name="AppThemeLight.Green" parent="AppThemeLight">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="colorControlHighlight">@color/accent_green</item>
    </style>

    <style name="AppThemeLight.Purple" parent="AppThemeLight">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorAccent">@color/accent_purple</item>
        <item name="colorControlHighlight">@color/accent_purple</item>
    </style>

    <style name="list">
        <item name="android:layout_height">@dimen/list_height</item>
        <item name="android:background">@color/background_elevated</item>
        <item name="colorControlHighlight">#9E9E9E</item>
        <item name="android:gravity">center</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:fastScrollOverlayPosition">atThumb</item>
    </style>

    <style name="listTitleText">
        <item name="android:textColor">@color/list_text</item>
        <item name="android:textSize">@dimen/list_text_header_size</item>
        <item name="android:paddingLeft">@dimen/list_padding_h</item>
        <item name="android:paddingRight">@dimen/list_padding_h</item>
    </style>

    <style name="listDetailText">
        <item name="android:textColor">@color/detail_text</item>
        <item name="android:textSize">@dimen/list_text_detail_size</item>
        <item name="android:paddingLeft">@dimen/list_padding_h</item>
        <item name="android:paddingRight">@dimen/list_padding_h</item>
    </style>

    <style name="gridTitleText">
        <item name="android:textColor">@color/grid_text</item>
        <item name="android:textSize">@dimen/grid_text_header_size</item>
    </style>

    <style name="gridDetailText">
        <item name="android:textColor">@color/grid_detail_text</item>
        <item name="android:textSize">@dimen/grid_text_detail_size</item>
    </style>

    <style name="settingsHeader">
        <item name="android:textColor">@color/ui_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/settings_header_text_size</item>
    </style>

</resources>