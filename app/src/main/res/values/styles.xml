<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App Theme Base -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="textColorPrimary">@color/primary_text</item>
        <item name="textColorSecondary">@color/secondary_text</item>
        <item name="progressEmptyColor">@color/progress_empty</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="seekArcStyle">@style/SeekArcLight</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <item name="colorPrimary">@color/primary_grey</item>
        <item name="colorPrimaryDark">@color/primary_dark_grey</item>
        <item name="colorAccent">@color/accent_grey</item>
        <item name="colorControlHighlight">@color/accent_grey</item>
        <item name="alertDialogTheme">@style/AppTheme.Black.AlertDialog</item>
    </style>

    <style name="AppTheme.Black.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent_grey</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="colorControlHighlight">@color/accent_red</item>
        <item name="alertDialogTheme">@style/AppTheme.Red.AlertDialog</item>
    </style>

    <style name="AppTheme.Red.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent_red</item>
    </style>

    <style name="AppTheme.Orange" parent="AppTheme">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryDark">@color/primary_dark_orange</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="colorControlHighlight">@color/accent_orange</item>
        <item name="alertDialogTheme">@style/AppTheme.Orange.AlertDialog</item>
    </style>

    <style name="AppTheme.Orange.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent_orange</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryDark">@color/primary_dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
        <item name="colorControlHighlight">@color/accent_yellow</item>
        <item name="alertDialogTheme">@style/AppTheme.Yellow.AlertDialog</item>
    </style>

    <style name="AppTheme.Yellow.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="colorControlHighlight">@color/accent_green</item>
        <item name="alertDialogTheme">@style/AppTheme.Green.AlertDialog</item>
    </style>

    <style name="AppTheme.Green.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="alertDialogTheme">@style/AppTheme.Blue.AlertDialog</item>
    </style>

    <style name="AppTheme.Blue.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Purple" parent="AppTheme">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorAccent">@color/accent_purple</item>
        <item name="colorControlHighlight">@color/accent_purple</item>
        <item name="alertDialogTheme">@style/AppTheme.Purple.AlertDialog</item>
    </style>

    <style name="AppTheme.Purple.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent_purple</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/splash_background</item>
        <item name="colorPrimary">@color/splash_background</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/splash_background</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="listTitleText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/list_text_header_size</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
    </style>

    <style name="listDetailText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/list_text_detail_size</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
    </style>

    <style name="gridTitleText">
        <item name="android:textColor">@color/grid_text</item>
        <item name="android:textSize">@dimen/grid_text_header_size</item>
    </style>

    <style name="gridDetailText">
        <item name="android:textColor">@color/grid_detail_text</item>
        <item name="android:textSize">@dimen/grid_text_detail_size</item>
    </style>

    <style name="miniplayerTitleText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="miniplayerDetailText" parent="miniplayerTitleText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>