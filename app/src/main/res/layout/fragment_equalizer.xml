<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded">

    <FrameLayout
        android:id="@+id/subheaderFrame"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equalizer"
            android:singleLine="true"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorAccent"
            android:layout_gravity="center" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/equalizerPresetFrame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/subheaderFrame">

        <TextView
            android:id="@+id/equalizerPresetPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Preset:"/>

        <Spinner
            android:id="@+id/equalizerPresetSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/equalizerPresetPrefix" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/equalizer_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/equalizerPresetFrame">
    </LinearLayout>

</RelativeLayout>