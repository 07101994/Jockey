<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/widget_square_artwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/art_default_xl"
        android:scaleType="centerCrop"
        android:foreground="@drawable/scrim_square_widget"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/list_padding">

        <TextView
            android:id="@+id/widget_square_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/player_text_main"
            style="@style/TextAppearance.AppCompat.Headline"
            tools:text="Song Name"/>

        <TextView
            android:id="@+id/widget_square_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/player_text_detail"
            style="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Artist"/>

        <TextView
            android:id="@+id/widget_square_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/player_text_detail"
            style="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Album"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/list_padding"
        android:paddingBottom="@dimen/list_padding">

        <FrameLayout android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="@dimen/now_playing_control_end_weight"
            tools:ignore="UselessLeaf"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/now_playing_button_size"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/widget_square_previous"
                android:layout_width="@dimen/now_playing_button_size"
                android:layout_height="@dimen/now_playing_button_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/button_previous_description"
                android:src="@drawable/ic_skip_previous_36dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/now_playing_button_size"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/widget_square_play_pause"
                android:layout_width="@dimen/now_playing_button_size"
                android:layout_height="@dimen/now_playing_button_size"
                android:layout_centerInParent="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/button_play_description"
                tools:src="@drawable/ic_play_arrow_36dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/now_playing_button_size"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/widget_square_next"
                android:layout_width="@dimen/now_playing_button_size"
                android:layout_height="@dimen/now_playing_button_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/button_skip_description"
                android:src="@drawable/ic_skip_next_36dp"/>
        </RelativeLayout>

        <FrameLayout android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="@dimen/now_playing_control_end_weight"
            tools:ignore="UselessLeaf"/>

    </LinearLayout>

</RelativeLayout>